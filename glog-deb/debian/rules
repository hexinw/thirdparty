#!/usr/bin/make -f
# -*- makefile -*-

# output every command that modifies files on the build system.
DH_VERBOSE = 1

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk
include /usr/share/dpkg/architecture.mk

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

export V = 1

BUILD_DIR=$(CURDIR)/glog

override_dh_auto_clean:
	dh_auto_clean

override_dh_auto_configure:
ifeq (arm64,$(DEB_HOST_ARCH))
	dh_auto_configure
	cd $(BUILD_DIR)/; \
	  cmake -S . -B . -G "Unix Makefiles" -DCMAKE_SYSTEM_NAME=Linux \
	  -DCMAKE_SYSTEM_PROCESSOR=aarch64 -DCMAKE_CXX_COMPILER=/usr/bin/aarch64-linux-gnu-g++-9 \
	  -DCMAKE_AR=/usr/bin/aarch64-linux-gnu-ar -DCMAKE_LINKER=/usr/bin/aarch64-linux-gnu-ld \
	  -DCMAKE_INSTALL_PREFIX=$(CURDIR)/debian/tmp/usr -DCMAKE_INSTALL_LIBDIR="lib/aarch64-linux-gnu"
else
	dh_auto_configure
	cd $(BUILD_DIR)/; \
	  cmake -S . -B . -G "Unix Makefiles"
endif

override_dh_auto_build:
	cd $(BUILD_DIR)/; \
	VERBOSE=1 cmake --build .

override_dh_auto_test:
ifeq (,$(filter nocheck,$(DEB_BUILD_OPTIONS)))
	echo "hello world"
#	make -C $(BUILD_DIR) test
endif

override_dh_auto_install:
	cd $(BUILD_DIR)/; \
	  cmake --build . --target install

override_dh_missing:
	dh_missing --list-missing

override_dh_usrlocal:
	echo "hello dh_userlocal"

override_dh_shlibdeps:
	echo "hello dh_shlibdeps"

%:
	dh $@ --buildsystem=cmake

.PHONY: override_dh_auto_clean override_dh_auto_configure \
	override_dh_auto_build override_dh_auto_test \
	override_dh_auto_install override_dh_missing
